{{/* ###########################################################################
Feature Tags
########################################################################### */}}
{{- $headless := false -}}  {{/* true if this machine does not have a GUI interface. aka ssh */}}
{{- $ephemeral := false -}} {{/* true if this machine is temporary, e.g. a cloud or VM instance  */}}
{{- $work := false -}}      {{/* true if this machine should have work config */}}
{{- $personal := false -}}  {{/* true if this machine should have personal secrets and config */}}
{{- $shared := false -}}    {{/* true if this is a shared machine */}}
{{- "" -}}

{{/* ###########################################################################
Operating System Identification
########################################################################### */}}
{{- $osID := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{/* Override some arch designations */}}
{{- $uname_arch := "" -}}
{{- if eq .chezmoi.os "linux" -}}
{{-   if eq (output "uname" "-m" | trim) "aarch64" -}}
{{-     $uname_arch = "arm64" -}}
{{-   else -}}
{{-     $uname_arch = output "uname" "-m" | trim -}}
{{-   end -}}
{{- end -}}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") (eq .chezmoi.username "root" "ubuntu" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

{{- $hostname := .chezmoi.hostname -}}
{{- $fqdn := .chezmoi.fqdnHostname -}}

{{/* On macOS the hostname can change depending on the network, this gives a more stable result */}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $hostname := output "scutil" "--get" "ComputerName" | trim -}}
{{- end -}}

{{- if not $ephemeral -}}
{{-   if contains "copernicus" $hostname -}}
{{-     $work = false -}}
{{-     $personal = true -}}
{{-     $shared = false -}}
{{-   else if contains ".cmschill.net" $fqdn -}}
{{-     $work = false -}}
{{-     $personal = true -}}
{{-   else if stdinIsATTY -}}
{{-     $headless = promptBoolOnce . "headless" "headless" -}}
{{-     $ephemeral = promptBoolOnce . "ephemeral" "ephemeral" -}}
{{-   else -}}
{{-     $ephemeral = true -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}

{{/* ###########################################################################
Sets the appearance of the desktop environment.
########################################################################### */}}
{{- $appearance := "Dark" }}
{{- if eq .chezmoi.os "darwin" -}}
{{/*  In light mode this command errors out in macOS */}}
{{-   if exec "defaults" "read" "-g" "AppleInterfaceStyle" "2>/dev/null" -}}
{{-     $appearance = "dark" -}}
{{-   else -}}
{{-     $appearance = "light" -}}
{{-   end -}}
{{- end -}}


{{- $name := "Mark E. Schill" -}}
{{- $email := "" -}}
{{- if $work -}}
{{-   $email = "Mark.Schill@candescent.com" -}}
{{- end -}}
{{- if $personal -}}
{{-   $email = "Mark.Schill@cmschill.net" -}}
{{- end -}}

{{- if not $ephemeral -}}
{{-   if $email | empty -}}
{{-     if stdinIsATTY -}}
{{-       $email = promptStringOnce . "email" "What is your email address?" -}}
{{-     end -}}
{{-   end -}}
{{- end -}}

################################################################################
# Chezmoi configuration file
################################################################################

scriptTempDir: "~/tmp"

git:
  autoCommit: true
  autoPush: true
diff:
  pager: delta
textconv:
- pattern: "**/*.plist"
  command: "plutil"
  args:
  - "-convert"
  - "xml1"
  - "-o"
  - "-"
  - "-"
data:
    name: {{ $name | quote }}
    email: {{ $email | quote }}
    ephemeral: {{ $ephemeral }}
    headless: {{ $headless }}
    hostname: {{ $hostname | quote }}
    personal: {{ $personal }}
    work: {{ $work }}
    osid: {{ $osID | quote }}
    shared: {{ $shared }}
    uname_arch: {{ $uname_arch }}
    appearance: {{ $appearance | quote }}
