{{- $email := "" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else -}}
{{-   $email = promptString "email" -}}
{{- end -}}

{{- $environment := "" -}}
{{- if hasKey . "environment" -}}
{{-   $environment = .environment -}}
{{- else -}}
{{-   $environment = promptString "Environment (personal,work)" -}}
{{- end -}}

{{- $gpg_key := "" -}}
{{- if hasKey . "gpg_key" -}}
{{-   $gpg_key = .gpg_key -}}
{{- else -}}
{{-   if eq $environment "personal" -}}
{{-     $gpg_key = "FAAFAF0EBAB3CC10CD5D51FA3A643C8EDF173DCC" -}}
{{-   else -}}
{{-     $gpg_key = "21BF846150573BD3557CABB90BFC25F27D4D5207" -}}
{{-   end -}}
{{- end -}}

{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

scriptTempDir: "~/tmp"
git:
  autoCommit: true
  autoPush: true
diff:
  pager: delta
data:
    email: {{ $email | quote }}
    gpg_key: {{ $gpg_key | quote }}
    environment: {{ $environment | quote }}
    osid: {{ $osid | quote }}
